<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BC34A"
    tools:context="sg.com.kaplan.onclicklistenerexample.MainActivity">

    <ImageView
        android:id="@+id/m1"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/m1"/>

    <ImageView
        android:id="@+id/m2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="25dp"
        android:layout_toStartOf="@+id/m1"
        app:srcCompat="@drawable/m2"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="....."
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:textSize="36sp"
        android:layout_marginTop="33dp"
        android:layout_alignTop="@+id/m2"
        android:layout_toEndOf="@+id/m2"
        android:layout_marginStart="53dp"/>
</RelativeLayout>
